<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        
        <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
        <title>#(title)</title>
        
        <link href="/styles/cdn.jsdelivr.net_npm_daisyui@3.1.0_dist_full.css" rel="stylesheet" type="text/css">
        <script src="/js/cdn.tailwindcss.com_3.3.2.js"></script>
        <script src="//unpkg.com/alpinejs" defer></script>
        <script src="/lib/sweetalert2/sweetalert2.all.min.js"></script>
        <link rel="stylesheet" href="/lib/sweetalert2/sweetalert2.min.css">
        
        #import("head")
        <style>
            html {
                font-size: 16px;
            }
            [x-cloak] { display: none !important; }
        </style>
    </head>

    <body>
        
        #import("navbar")
        #import("content")
        #import("footer")

        <script>
            function showMySuccessToast(message, willClose) {
                Swal.fire({
                    title: message,
                    icon: 'success',
                    showConfirmButton: false,
                    timer: 1500,
                    willClose: willClose,
                  })
            }
            function showMyErrorToast(message) {
                Swal.fire({
                    title: message,
                    icon: 'error',
                    showConfirmButton: false,
                    timer: 1500
                })
            }
            function showMyInfoToast(message) {
                Swal.fire({
                    title: message,
                    icon: 'info',
                    showConfirmButton: false,
                    timer: 1500
                })
            }
        </script>
    </body>

</html>